<% if user_signed_in? %>
  <p class="nav user">
    <span class="nav-user title"><%= link_to t('.testguru_welcome'), root_path %></span> |
    <%= t('.profile', email: current_user.email) %> |
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
  </p>

<% else %>
  <%= link_to t('.sign_up'), new_user_registration_path %>
  <%= link_to t('.login'), new_user_session_path %>
<% end %>
